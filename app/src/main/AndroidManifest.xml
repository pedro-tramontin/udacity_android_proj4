<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/search_results_activity_title"/>
        <activity
            android:name=".PlayActivity"
            android:label="@string/play_activity_title">
        </activity>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artist_activity_title">
        </activity>
        <activity
            android:name=".AlbumActivity"
            android:label="@string/album_activity_title">
        </activity>
        <activity
            android:name=".GenreSearchResultActivity"
            android:label="@string/genre_search_result_activity_title">
        </activity>
    </application>

</manifest>